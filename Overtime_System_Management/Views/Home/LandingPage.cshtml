    <header class="header-area">
        <div class="navbar-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <img class="mr-2" style="width:50px" src="~/basic-opl/assets/images/logo-ot-removebg-preview.png" alt="Logo">
                            <a class="navbar-brand" href="/">
                                <h3 class="text-black">Overtime Management System</h3>
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>

                            <!-- navbar collapse -->

                            <div class="navbar-btn d-none d-sm-inline-block align-self-end ml-auto">
